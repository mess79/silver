			input.host(type="text", value="localhost:8080")
			p company
			input.company(type="text", value="5ec82c958be52a1508008717")
			br
			p From
			input.from(type="text", value="GBR")
			p To
			input.to(type="text", value="CHN")
			p For
			input.for(type="text", value="Business")
			br
			a.post(href='/api') Post
			a.put(href='/api') Put
			a.patch(href='/api') Patch
			a.get(href='/api') Get
			a.delete(href='/api') Delete
		div.url
		textarea.output
